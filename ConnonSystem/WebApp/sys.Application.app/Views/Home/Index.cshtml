<script type="text/javascript">
		var imgobj = document.getElementsByTagName("i");

		var lis = document.getElementsByTagName("li");
		var Lb = document.getElementById("Lb");

		var j = -1,
			t;
		imgshow();
		//轮播
		function imgshow() {
			j++;
			if (j > imgobj.length - 1) {
				j = 0;
			}
			for (var i = 0; i < imgobj.length; i++) {
				imgobj[i].style.display = "none";
				lis[i].style.backgroundColor = "#FFF";
			}
			imgobj[j].style.display = "block";
			lis[j].style.backgroundColor = "blue";
		}
		t = setInterval("imgshow()", 1000);
		Lb.onmouseover = function() { //鼠标移入停止计时
			clearInterval(t);
		}
		Lb.onmouseout = function() { //鼠标移出开始计时
			t = setInterval("imgshow()", 1000);
		}

		//循环遍历小圆点
		for (var i = 0; i < lis.length; i++) {
			lis[i].index = i;
			lis[i].onclick = function() {
				for (var l = 0; l < imgobj.length; l++) {
					imgobj[l].style.display = "none";
					lis[l].style.backgroundColor = "#FFF";
				}
				j = this.index;
				imgobj[j].style.display = "block";
				lis[j].style.backgroundColor = "blue";
			}
		}
</script>
